{
  "compilerOptions": {
    "outDir": "./build/",
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "target": "esnext",
    "sourceMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "jsxImportSource": "jsx-dom",
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": "${configDir}/"
  },
  "files": [
    "${configDir}/sources/index.tsx"
  ]
}